@model MvcPractice.Models.Movie
@{
    ViewBag.Title = Model.Name;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>

<ul>
    <li><b>Genre:</b>  @Model.Genre.Name</li>
    <li><b>Release:</b>  @Model.ReleaseDate.ToLongDateString()</li>
    <li><b>Date Added:</b>  @Model.DateAdded.ToLongDateString()</li>
    <li><b>Number in Stock:</b>  @Model.NumberInStock</li>
</ul>

